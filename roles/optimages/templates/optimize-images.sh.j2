#!/bin/bash
find /var/www/{{ wordpress_sites }} -iname '*.png' -print0 | xargs -0 optipng -o7 -preserve
find /var/www/{{ wordpress_sites }} -iname '*.jpg' -print0 | \
xargs -0 jpegoptim --max=90 --strip-all --preserve --totals
chown -R www-data:www-data /var/www/{{ wordpress_sites }}
find /var/www/{{ wordpress_sites }}  -type d -exec chmod 755 {} \;
find /var/www/{{ wordpress_sites }}  -type f -exec chmod 644 {} \;
